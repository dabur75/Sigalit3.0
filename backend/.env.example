# Production Environment Variables for Fly.io
NODE_ENV=production
PORT=4000

# PostgreSQL Database (Fly.io will provide DATABASE_URL when attached)
DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Frontend serving mode
SERVE_FROM_FRONTEND=false

# AI Agent settings (optional)
AI_AGENT_ENABLED=true

# Add your LLM API keys when ready (from LLM_ENHANCEMENT_PLAN.md)
# CLAUDE_API_KEY=your_claude_api_key
# OPENAI_API_KEY=your_openai_api_key

# Fly.io specific (automatically set by platform)
# FLY_APP_NAME=sigalit-scheduling
# FLY_REGION=fra